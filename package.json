{
  "name": "pms-smart-lock",
  "version": "1.0.0",
  "description": "Nodejs Graphql server to install smart lock on units.",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" *.json",
    "lint": "eslint \"{src, tests}/**/*.ts\" --fix",
    "build": "tsc && cp -r ./src/html/ ./dist/",
    "start": "node .",
    "dev": "tsnd --respawn --transpile-only ./src/index.ts",
    "prepare": "husky install"
  },
  "author": "ahmed magdy <ahmedmagdy2016@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "apollo-server-express": "^3.10.3",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "graphql": "^15.8.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "dotenv": "^16.0.3",
    "ts-node-dev": "^2.0.0",
    "lint-staged": "^13.0.3",
    "prisma": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.json": "prettier --write"
  }
}
